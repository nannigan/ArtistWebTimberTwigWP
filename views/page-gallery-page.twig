{% extends "base.twig" %}
{% block content %}
    <div class="content-wrapper">
        <article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
            <section class="article-content">
                <div class="row">
                    {# data-flickity-options='{ "cellAlign": "left", "contain": true }' #}

                    {# NOTE TO SELF must not rewrite dist/main.js so comment js task out of gulpfile #}
                    <h4>Fragments</h4>
                    <div class="gallery-flickity js-flickity" data-flickity-options='{ "wrapAround": true }' >
                    {#   <pre>{{dump(post.medium_section_gallery)}}</pre> #}

                    {% for i in post.medium_section_gallery %}
                        {% set img = TimberImage(i) %}
                        <div class="gallery-cell" >
                            <a href="{{img.link}}">
                            <img src="{{img.src('medium')}}" class="gallery-cell-image" alt="{{img.title}}"></a>
                            <p class='small'>{{img.caption}}</p>
                        </div>
                    {% endfor %}

                      {#   <div class="gallery-cell"><img class="gallery-cell-image"
                        src="http://placekitten.com.s3.amazonaws.com/homepage-samples/408/287.jpg" alt="itten" ></div> #}
                </div>
            </div>
        </section>
    </article>
    </div><!-- /content-wrapper -->
{% endblock %}